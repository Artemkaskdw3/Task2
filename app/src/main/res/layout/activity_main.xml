<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/answer"
        android:text="Ответ:"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:id="@+id/lineOne"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        >

            <TextView
                android:text="Возвести в степень:"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <EditText
                android:inputType="numberDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Число"


                />
            <EditText
                android:inputType="numberDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Степень"

                />

            <Button
                android:layout_height="50dp"
                android:text="2²"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:backgroundTint ="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                />

    </LinearLayout >
    <LinearLayout
        android:id="@+id/linerTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf = "@+id/lineOne"
        android:orientation="horizontal"
       >
        <TextView
            android:text="Остаток от деления:"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Число"


            />
        <EditText
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Число"

            />

        <Button
            android:layout_height="50dp"
            android:text="2/2"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:backgroundTint ="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lineThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf = "@+id/linerTwo"
        android:orientation="horizontal"
        >
        <TextView
            android:text="Округление:"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Число"


            />
        <EditText
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Количество знаков"

            />

        <Button
            android:layout_height="50dp"
            android:text="2"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:backgroundTint ="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lineFour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf = "@+id/lineThree"
        android:orientation="horizontal"
        >
        <TextView
            android:text="Факториал числа:"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Число"


            />

        <Button
            android:layout_height="50dp"
            android:layout_marginLeft="115dp"
            android:text="2!"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:backgroundTint ="@color/black"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>